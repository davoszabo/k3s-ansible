---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: local-selfsigned-certificate
  namespace: {{ cert_manager.namespace }}
spec:
  secretName: local-selfsigned-tls
  issuerRef:
    name: local-selfsigned-issuer
    kind: ClusterIssuer
  dnsNames:
  - "{{ traefik.domain_name }}"
  - "*.{{ traefik.domain_name }}"

---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: duckdns-letsencrypt-production-issuer
  namespace: {{ cert_manager.namespace }}
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ cert_manager.dns.duckdns.email }}
    privateKeySecretRef:
      name: duckdns-letsencrypt-production-issuer
    solvers:
      - dns01:
          webhook:
            config:
              apiTokenSecretRef:
                name: duckdns-token-secret
                key: duckdns-token
            groupName: {{ traefik.domain_name }}
            solverName: duckdns
